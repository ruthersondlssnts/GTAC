@model GTAC.Models.Certificate

@{
    ViewData["Title"] = "Certificates";
    ViewData["NavCertificates"] = "active";
}

<div class="row">
    <div class="col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Create Certificate</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <img id="preview" src="~/images/img-prev.jpg" style="height:200px; display:block" class="mx-auto" />
                    <div class="form-group">
                        <label class="control-label">Certificate Image</label>
                        <input onchange="photoChange()" asp-for="CertificateUpload" class="form-control" accept="image/png, image/jpeg" />
                        <span asp-validation-for="CertificateUpload" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        |
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function photoChange() {
            $('#preview').attr('src', URL.createObjectURL(event.target.files[0]));
        }
    </script>
}

