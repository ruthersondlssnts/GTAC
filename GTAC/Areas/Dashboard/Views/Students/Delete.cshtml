@model GTAC.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this student?</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-lg-4">
                        @Html.DisplayNameFor(model => model.EnrolledAt)
                    </dt>
                    <dd class="col-lg-8">
                        @Html.DisplayFor(model => model.EnrolledAt)
                    </dd>
                    <dt class="col-lg-4">
                        @Html.DisplayNameFor(model => model.GraduatedAt)
                    </dt>
                    <dd class="col-lg-8">
                        @Html.DisplayFor(model => model.GraduatedAt)
                    </dd>
                    <dt class="col-lg-4">
                        @Html.DisplayNameFor(model => model.Instructor)
                    </dt>
                    <dd class="col-lg-8">
                        @Html.DisplayFor(model => model.Instructor.Id)
                    </dd>
                    <dt class="col-lg-4">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class="col-lg-8">
                        @Html.DisplayFor(model => model.User.Id)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
