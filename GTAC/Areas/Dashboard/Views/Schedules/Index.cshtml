@model IEnumerable<GTAC.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Schedules</h6>
    </div>

    <div class="card-body">
        @*<a asp-action="Create" class="btn btn-primary mb-3">Create</a>*@
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Student
                        </th>
                        <th>
                            Schedule
                        </th>
                        <th>
                            Time
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Approved At
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Student.User.Firstname @item.Student.User.Lastname
                            </td>
                            <td>
                                <div>
                                    <b>Day 1:</b> @item.DayOne.ToString("dddd, MMM dd yyyy")
                                </div>
                                <div>
                                    <b>Day 2:</b> @item.DayTwo.ToString("dddd, MMM dd yyyy")
                                </div>
                                <div>
                                    <b>Day 3:</b> @item.DayThree.ToString("dddd, MMM dd yyyy")
                                </div>
                                <div>
                                    <b>Day 4:</b> @item.DayFour.ToString("dddd, MMM dd yyyy")
                                </div>
                            </td>
                            <td>
                                <div>
                                    @item.DayOne.ToString("h:mm tt") - @item.DayOne.AddHours(2).ToString("h:mm tt")
                                </div>
                                <div>
                                    @item.DayTwo.ToString("h:mm tt") - @item.DayTwo.AddHours(2).ToString("h:mm tt")
                                </div>
                                <div>
                                    @item.DayThree.ToString("h:mm tt") - @item.DayThree.AddHours(2).ToString("h:mm tt")
                                </div>
                                <div>
                                    @item.DayFour.ToString("h:mm tt") - @item.DayFour.AddHours(2).ToString("h:mm tt")
                                </div>
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                @item.ApprovedAt
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

