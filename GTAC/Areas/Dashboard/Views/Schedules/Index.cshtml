@model IEnumerable<GTAC.Models.Schedule>

@{
    ViewData["Title"] = "Schedule";
    ViewData["NavSchedules"] = "active";
}

<!-- Content Row -->
<div class="row">
    <!-- Pending Requests Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1 ">
                            Pending Requests
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800 total-request">0</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Schedules </h6>
    </div>

    <div class="card-body">
        @*<a asp-action="Create" class="btn btn-primary mb-3">Create</a>*@
        <div class="table-responsive">
            <table class="table table-bordered dt-responsive table-sm" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th data-priority="1">
                            Student
                        </th>
                        <th data-priority="3">
                            Instructor
                        </th>
                        <th>
                            Schedule
                        </th>
                        <th>
                            Time
                        </th>
                        <th data-priority="2">
                            Status
                        </th>
                        <th data-priority="4"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @item.Student?.User?.Firstname @item.Student?.User?.Lastname
                            </td>
                            <td>
                                @item.Student?.Instructor?.Firstname @item?.Student?.Instructor?.Lastname
                            </td>
                            <td>
                                <div>
                                    <b>Day 1:</b> @item.DayOne.ToString("dddd, MMM dd yyyy")
                                </div>
                                <div>
                                    <b>Day 2:</b> @item.DayTwo.ToString("dddd, MMM dd yyyy")
                                </div>
                                <div>
                                    <b>Day 3:</b> @item.DayThree.ToString("dddd, MMM dd yyyy")
                                </div>
                                <div>
                                    <b>Day 4:</b> @item.DayFour.ToString("dddd, MMM dd yyyy")
                                </div>
                            </td>
                            <td>
                                <div>
                                    @item.DayOne.ToString("h:mm tt") - @item.DayOne.AddHours(2).ToString("h:mm tt")
                                </div>
                                <div>
                                    @item.DayTwo.ToString("h:mm tt") - @item.DayTwo.AddHours(2).ToString("h:mm tt")
                                </div>
                                <div>
                                    @item.DayThree.ToString("h:mm tt") - @item.DayThree.AddHours(2).ToString("h:mm tt")
                                </div>
                                <div>
                                    @item.DayFour.ToString("h:mm tt") - @item.DayFour.AddHours(2).ToString("h:mm tt")
                                </div>
                            </td>
                            <td>
                                @item.Status
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#dataTable').DataTable();
        });

        $.ajax({
            url: "/Dashboard/Schedules/TotalPendingRequests",
            type: "get",
            success: function (res) {
                $('.total-request').text(res.totalRequests);
            },
            error: function (err) {
                console.log(err)
            }
        });
    </script>
}

