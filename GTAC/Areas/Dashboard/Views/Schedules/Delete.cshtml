@model GTAC.Models.Schedule

@{
    ViewData["Title"] = "Schedule";
    ViewData["NavSchedules"] = "active";
}

<div class="row">
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this schedule?</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-lg-4">
                        Day 1
                    </dt>
                    <dd class="col-lg-8">
                        @Model.DayOne.ToString("dddd, MMM dd yyyy") <br />
                        <small>@Model.DayOne.ToString("h:mm tt") - @Model.DayOne.AddHours(2).ToString("h:mm tt")</small>
                    </dd>
                    <dt class="col-lg-4">
                        Day 2
                    </dt>
                    <dd class="col-lg-8">
                        @Model.DayTwo.ToString("dddd, MMM dd yyyy") <br />
                        <small>@Model.DayTwo.ToString("h:mm tt") - @Model.DayTwo.AddHours(2).ToString("h:mm tt")</small>
                    </dd>
                    <dt class="col-lg-4">
                        Day 3
                    </dt>
                    <dd class="col-lg-8">
                        @Model.DayThree.ToString("dddd, MMM dd yyyy") <br />
                        <small> @Model.DayThree.ToString("h:mm tt") - @Model.DayThree.AddHours(2).ToString("h:mm tt")</small>
                    </dd>
                    <dt class="col-lg-4">
                        Day 4
                    </dt>
                    <dd class="col-lg-8">
                        @Model.DayFour.ToString("dddd, MMM dd yyyy") <br />
                        <small> @Model.DayFour.ToString("h:mm tt") - @Model.DayFour.AddHours(2).ToString("h:mm tt")</small>
                    </dd>
                    <dt class="col-lg-4">
                        Fullname
                    </dt>
                    <dd class="col-lg-8">
                        @Model.Student.User.Firstname  @Model.Student.User.Lastname
                    </dd>
                    <dt class="col-lg-4">
                        Email
                    </dt>
                    <dd class="col-lg-8">
                        @Model.Student.User.Email
                    </dd>
                    <dt class="col-lg-4">
                        Contact
                    </dt>
                    <dd class="col-lg-8">
                        @Model.Student.User.PhoneNumber
                    </dd>
                    <dt class="col-lg-4">
                        Status
                    </dt>
                    <dd class="col-lg-8">
                        @GTAC.Helpers.EnumExtensions.GetDisplayName(Model.Status)
                    </dd>
                    <dt class="col-lg-4">
                        Approved At
                    </dt>
                    <dd class="col-lg-8">
                        @Model.ApprovedAt
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>

</div>

