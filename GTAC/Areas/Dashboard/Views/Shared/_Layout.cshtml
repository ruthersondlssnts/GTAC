                <a class="nav-link" asp-area="Dashboard" asp-controller="Certificates" asp-action="Index">
                    <i class="fas fa-fw fa-certificate"></i>
                    <span>Certificates</span>
                </a>
            </li>

            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
            {
                <!-- Nav Item - Students -->
                <li class="nav-item @ViewData["NavUsers"]">
                    <a class="nav-link" asp-area="Dashboard" asp-controller="Users" asp-action="Index">
