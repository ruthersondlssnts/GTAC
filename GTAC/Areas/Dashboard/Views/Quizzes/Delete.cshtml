@model GTAC.Models.Quiz
@{
    ViewData["Title"] = "Quizzes";
    ViewData["NavQuizzes"] = "active";
}
<div class="row">
    <div class="col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Are you sure you want to delete this quiz?</h6>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-lg-3">
                        Name
                    </dt>
                    <dd class="col-lg-9">
                        @Model.Name
                    </dd>
                    <dt class="col-lg-3">
                        Link
                    </dt>
                    <dd class="col-lg-9">
                        @Model.Link
                    </dd>
                    <dt class="col-lg-3">
                        Author
                    </dt>
                    <dd class="col-lg-9">
                        @Model.Author.Firstname  @Model.Author.Lastname
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>

</div>
