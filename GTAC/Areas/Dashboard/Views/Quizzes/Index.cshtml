@model IEnumerable<GTAC.Models.ViewModels.StudentQuizzesViewModel>

@{
    ViewData["Title"] = "Quizzes";
    ViewData["NavQuizzes"] = "active";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Quizzes</h6>
    </div>

    <div class="card-body">
        @if (User.IsInRole("Instructor") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary mb-3">Create</a>
        }

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Link
                        </th>
                        @if (User.IsInRole("Instructor") || User.IsInRole("Admin"))
                        {
                            <th>Author</th>
                        }
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <a target="_blank" class="btn btn-link" href="@item.Link">Take exam here</a>
                            </td>
                            @if (User.IsInRole("Instructor") || User.IsInRole("Admin"))
                            {
                                <td>
                                    @item.Author.Firstname @item.Author.Lastname
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                    @if (!item.isAnyStudents)
                                    {
                                        <span> | <a asp-action="Delete" asp-route-id="@item.Id">Delete </a></span>
                                    }
                                </td>
                            }
                            else
                            {
                                <td>
                                    @if (item.isDone)
                                    {
                                        <form asp-action="UpdateStudentQuiz">
                                            <input type="hidden" value="@item.Id" name="Id" />
                                            <button type="submit" class="btn btn-link">Unsubmit</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="UpdateStudentQuiz">
                                            <input type="hidden" value="@item.Id" name="Id" />
                                            <input type="hidden" value="true" name="isMarkDone" />
                                            <button type="submit" class="btn btn-link">Mark As Done</button>
                                        </form>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>