@model IEnumerable<GTAC.Models.Module>
@{
    ViewData["Title"] = "Modules";
    ViewData["NavModules"] = "active";
    bool isVal = User.IsInRole("Instructor") || User.IsInRole("Admin") || User.IsInRole("Staff") || User.IsInRole("Manager");
}

@if (Model == null)
{
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card bg-primary text-white ">
                <div class="card-body">
                    Please wait for your account approval to view modules
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Modules </h6>
        </div>

        <div class="card-body">
            @if (isVal)
            {
                <a asp-action="Create" class="btn btn-primary mb-3">Create</a>
            }

            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Title
                            </th>
                            <th>
                            </th>
                            @if (isVal)
                            {
                                <th>
                                    Uploader
                                </th>
                                <th></th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <a asp-action="ViewPDF" target="_blank" asp-route-fileName="@item.Path" asp-route-title="@item.Title">View</a>
                                </td>
                                @if (isVal)
                                {
                                    <td>
                                        @item?.Uploader?.Firstname  @item?.Uploader?.Lastname
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                }


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


@section Scripts {

}